#---------------------------------------#
#               Proxy                   #
#---------------------------------------#
function proxy() {
    if [[ "${http_proxy:-NOTSET}" != "NOTSET" ]]; then
        unset http_proxy && unset https_proxy && unset HTTP_PROXY && unset HTTPS_PROXY;
        npm config set http-proxy null;
        npm config set https-proxy null;
        git config --global --unset http.proxy;
        git config --global --unset https.proxy;
        echo "No proxy.";
    else
        export http_proxy=http://192.168.222.5:8080 && export https_proxy=http://192.168.222.5:8080 && export HTTP_PROXY=http://192.168.222.5:8080 && export HTTPS_PROXY=http://192.168.222.5:8080;
        npm config set http-proxy "http://192.168.222.5:8080";
        npm config set https-proxy "http://192.168.222.5:8080";
        git config --global http.proxy http://192.168.222.5:8080;
        git config --global https.proxy http://192.168.222.5:8080;
        echo "http_proxy = $http_proxy";
        echo "https_proxy = $https_proxy";
        echo "HTTP_PROXY = $HTTP_PROXY";
        echo "HTTPS_PROXY = $HTTPS_PROXY";
    fi;
}

#---------------------------------------#
#           Coloured Man Pages          #
#---------------------------------------#
man() {
    env \
        LESS_TERMCAP_mb=$(printf "\e[1;31m") \
        LESS_TERMCAP_md=$(printf "\e[1;31m") \
        LESS_TERMCAP_me=$(printf "\e[0m") \
        LESS_TERMCAP_se=$(printf "\e[0m") \
        LESS_TERMCAP_so=$(printf "\e[1;44;33m") \
        LESS_TERMCAP_ue=$(printf "\e[0m") \
        LESS_TERMCAP_us=$(printf "\e[1;32m") \
            man "$@"
}